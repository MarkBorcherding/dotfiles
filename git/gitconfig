[alias]
  ra = !git r --all
  r = !git l -20
  l = log --graph --abbrev-commit --date=relative
  lg = log --graph --abbrev-commit --date=relative
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[push]
	default = simple
