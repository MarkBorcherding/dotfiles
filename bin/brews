#!/bin/bash

brew update

# Install the no brainer needs
brew install \
      curl \
      git \
      htop-osx \
      iftop \
      python \
      stow \
      the_silver_searcher \
      tmux \
      vim \
      wget

# Install packages needed for Ruby
brew install \
      rbenv \
      rbenv-gem-rehash \
      ruby-build \
      libxml2 \
      libxslt \
      qt4

pip install powerline-status
