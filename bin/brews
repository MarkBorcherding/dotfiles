#!/bin/bash

brew update

# Install the no brainer needs
brew install \
      awscli \
      ctags \
      curl \
      docker-completion \
      emacs \
      gibo \
      git \
      htop-osx \
      iftop \
      ispell \
      node \
      python \
      reattach-to-user-namespace \
      sbt \
      scala \
      scalastyle \
      shellcheck \
      speedtest_cli \
      stow \
      the_silver_searcher \
      tig \
      tmux \
      typesafe-activator \
      vim \
      wget \
      zsh

# Install packages needed for Ruby
brew install \
      rbenv \
      rbenv-gem-rehash \
      ruby-build \
      libxml2 \
      libxslt \
      qt4

brew install neovim/neovim/neovim

brew tap homebrew/services

pip install powerline-status
